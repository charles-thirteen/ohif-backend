{
	"compilerOptions": {
		// File Layout
		"rootDir": "./src",
		"outDir": "./dist",

		// Environment Settings - CommonJS for Node.js compatibility
		"module": "CommonJS",
		"moduleResolution": "Node",
		"target": "ES2022",

		// Other Outputs
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,

		// Stricter Typechecking Options
		"noUncheckedIndexedAccess": true,

		// Style Options
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		// Path Aliases
		"baseUrl": "./",
		"paths": {
			"@Domain/*": ["src/domains/*"],
			"@Class/*": ["src/classes/*"],
			"@Middleware/*": ["src/middlewares/*"],
			"@Service/*": ["src/services/*"],
			"@Util/*": ["src/utils/*"]
		},

		// Recommended Options
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
